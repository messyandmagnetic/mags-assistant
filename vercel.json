{
  "version": 2,
  "builds": [
    { "src": "next.config.js", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/" }
  ],
  "crons": [
    { "path": "/api/drive/review", "schedule": "0 14 * * *" },
    {
      "path": "/api/social/run-scheduler",
      "schedule": "0 * * * *",
      "headers": { "x-cron-secret": "@CRON_SECRET" }
    }
  ]
}
